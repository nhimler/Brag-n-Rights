@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<link rel="stylesheet" href="~/css/identity.css" />

<div class="row justify-content-center">
    <div class="identity-form mt-4">
        <div class="card">
            <div class="card-body">
                <form id="account" method="post">
                    <h2 class="text-center">Log In</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input id="login-username" asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Username" class="form-label">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input id="login-password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>
                    <a href="~/Identity/Account/Register" class="btn btn-link register-link">Don't have an account? Register</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-link register-link">Back to Home</a>
                    <div class="mt-3">
                        <a class="btn btn-link register-link" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    <div>
                        <a class="btn btn-link register-link" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
