@model GymBro_App.Models.DTOs.AwardMedal

@{
    ViewData["Title"] = "Awarded Medals";
}

<link href="~/css/AwardedMedal.css" rel="stylesheet" type="text/css" />

<h2>Awarded Medals</h2>

@if (Model.AwardedMedals != null && Model.AwardedMedals.Any())
{
    <div class="medals-container">
        @foreach (var medal in Model.AwardedMedals)
        {
            <div class="medal">
                <h3>@medal.MedalName</h3>
                <img src="@medal.MedalImage" alt="@medal.MedalName" class="medal-image" />

                <p><strong>Progress:</strong> @medal.ProgressPercentage.ToString("F2")%</p>

                @if (medal.AwardedDate.HasValue)
                {
                    <p><strong>Awarded On:</strong> @medal.AwardedDate.Value.ToString("MM/dd/yyyy")</p>
                }
                else
                {
                    <p>Not Awarded Yet</p>
                }

                @if (medal.StepsRemaining > 0)
                {
                    <p><strong>Steps Remaining:</strong> @medal.StepsRemaining</p>
                }
                else
                {
                    <p><strong>Medal Unlocked!</strong></p>
                }
            </div>
        }
    </div>
}
else
{
    <p>No medals have been awarded today.</p>
}

