<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymBro_App</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymBro_App.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar / Navbar -->
    <nav class="navbar">
        <button class="nav-toggle">&#9776;</button>
        <ul class="nav-links">
            <li class="nav-brand">GymBro</li>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="UserPage" asp-action="Index">User Page</a></li>
            <li><a asp-controller="MealPlan" asp-action="Index">Meal Plan</a></li>
            <li><a asp-controller="Workouts" asp-action="Index">Workout Plan</a></li>
            <li><a asp-controller="AwardMedal" asp-action="AwardMedals">Step Medals</a></li>
            <li><a asp-controller="StepCompetition" asp-action="Index">Step Competition</a></li>
            <li class="nav-separator"></li>
            <partial name="_LoginPartial" />
        </ul>
    </nav>

    <!-- Page Content -->
    <div class="content">
      @RenderBody()
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/a35698964c.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>