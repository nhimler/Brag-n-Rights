@model GymBro_App.ViewModels.MealPlanHomeView?

@{
    ViewData["Title"] = "Meal Details";
}

<a asp-action="Index"><button class="btn btn-primary mb-2" id="home-btn">Back to Meal Plans</button></a>
<br>
<a asp-action="Clear"><button class="btn btn-danger mb-2" id="del-btn">Delete All</button></a>

@if(Model != null){
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Meal Plan Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var plan in Model.MealPlans){
                <tr>
                    <td>@plan.PlanName</td>
                    <td>@plan.StartDate.ToString("MM/dd/yyyy")</td>
                    <td>@plan.EndDate.ToString("MM/dd/yyyy")</td>
                    <td><a asp-action="MealPlanDetails" asp-route-id="@plan.Id">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>
}