@model GymBro_App.ViewModels.MealPlanView

@{
    ViewData["Title"] = "Meal Plan Creation";
}

<h2>Create Meal Plan</h2>
<form method="post" asp-action="CreateMealPlan" asp-route-id="">
    <input asp-for="MealPlanId" hidden readonly/>
    <div class="form-group">
        <label asp-for="PlanName">Plan Name</label>
        <input asp-for="PlanName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    
    <select asp-for="Frequency" class="form-control">
            <option value="Once">Once</option>
            <option value="Weekly">Weekly</option>
            <option value="Monthly">Monthly</option>
    </select>

    <div class="form-group">
        <label asp-for="TargetCalories">Target Calories</label>
        <input asp-for="TargetCalories" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="TargetProtein">Target Protein</label>
        <input asp-for="TargetProtein" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="TargetCarbs">Target Carbs</label>
        <input asp-for="TargetCarbs" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="TargetFats">Target Fats</label>
        <input asp-for="TargetFats" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary mt-3" id="create-btn">Create</button>

</form>
