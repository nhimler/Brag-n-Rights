{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {  // shows *.feature.cs files as nested items
    "*.feature": "${capture}.feature.cs"
  },
  "files.exclude": { // excludes compilation result
    "**/obj/": true,
    "**/bin/": true,
  },
  "cucumber.glue": [ // sets the location of the step definition classes
    "StepDefinitions/*.cs",
    "StepDefinitions/AwardMedal/*.cs",
    "StepDefinitions/Gym/*.cs",
    "StepDefinitions/Home/*.cs",
    "StepDefinitions/Identity/*.cs",
    "StepDefinitions/MealPlan/*.cs",
    "StepDefinitions/StepCompetition/*.cs",
    "StepDefinitions/UserPage/*.cs",
    "StepDefinitions/Workouts/*.cs"
  ],
  "cucumber.features": [ // sets the location of the feature files
    "Features/*.feature",
    "Features/AwardMedal/*.feature",
    "Features/Gym/*.feature",
    "Features/Home/*.feature",
    "Features/Identity/*.feature",
    "Features/MealPlan/*.feature",
    "Features/StepCompetition/*.feature",
    "Features/UserPage/*.feature",
    "Features/Workouts/*.feature",

  ],
  "dotnet-test-explorer.testProjectPath": "",
}